<div class="page">
  <button class="cancel-button"><img src="./static/svg/cancel.svg"></button>
  <img class="ibackground" src="static/img/image_1.png">
  <div class="form-container">
    <form class="input-container">
      <h4 class="registration-title">Регистрация в PinSpire</h4>
      <div class="input-username">
        <label for="username" class="labeled-input">Имя пользователя</label>
        <input type="text" id="username" placeholder="username">
        <span class="username-error-message"></span>
      </div>
      <div class="input-email">
        <label for="email" class="labeled-input">Почта</label>
        <input type="email" id="email" placeholder="pinspire@mail.ru">
        <span class="email-error-message"></span>
      </div>
      <div class="input-password">
        <label for="password" class="labeled-input">Пароль</label>
        <input type="password" id="password" placeholder="●●●●●●●●●●●●">
        <span class="password-error-message"></span>
      </div>
      <span class="wrong-data-error-message"></span>
      <button class="button" type="submit">Создать аккаунт</button>
      <p class="already-registered">
        Уже есть аккаунт? <a href="#">Войти</a>
      </p>
    </form>
  </div>
</div>
