<header class="header-with-title">
  <div class="header-with-title__left"></div>
  <div class="header-with-title__title text-h4-medium">{{title}}</div>
  <div class="header-with-title__user-btns">
    <div class="header-with-title__user__create">
      <div class="header-with-title__user__create-img">
        <img class="js-create-img" src="/assets/icons/forHeader/create.svg">
      </div>
      <nav class="header-with-title__create__menu hide">
        <div class="header-with-title__create__menu__pin header-with-title__create__menu__item">
          <div class="header-with-title__create__menu__pin-icon">
            <img src="/assets/icons/forHeader/icon_picture-create.svg">
          </div>
          <div class="header-with-title__create__menu__pin-text text-base1-regular">
            Создать пин
          </div>
        </div>
        <div class="header-with-title__create__menu__board header-with-title__create__menu__item">
          <div class="header-with-title__create__menu__board-icon">
            <img src="/assets/icons/forHeader/icon_board-create.svg">
          </div>
          <div class="header-with-title__create__menu__board-text text-base1-regular">
            Создать доску
          </div>
        </div>
      </nav>
    </div>
    <div class="header-with-title__user__notification">
      <div class="header-with-title__user__notification-img">
        <img class="js-notification-img" src="/assets/icons/forHeader/notification.svg">
      </div>
      <nav class="header-with-title__notification__menu hide">
        {{!-- <div class="header-with-title__create__menu__pin header-with-title__create__menu__item">
          <div class="header-with-title__create__menu__pin-icon">
            <img src="/assets/icons/forHeader/icon_picture-create.svg">
          </div>
          <div class="header-with-title__create__menu__pin-text text-base1-regular">
            Создать пин
          </div>
        </div>
        <div class="header-with-title__create__menu__board header-with-title__create__menu__item">
          <div class="header-with-title__create__menu__board-icon">
            <img src="/assets/icons/forHeader/icon_picture-create.svg">
          </div>
          <div class="header-with-title__create__menu__board-text text-base1-regular">
            Создать доску
          </div>
        </div> --}}
      </nav>
    </div>
    <div class="header-with-title__user__avatar">
      <div class="header-with-title__user__avatar-img">
        <img src="{{avatar}}" class="header-with-title__user__avatar-user">
        <img src="/assets/icons/actions/icon_profile_arrow-down.svg" class="header-with-title__user__avatar-user-arrow">
      </div>
      <nav class="header-with-title__user__menu hide">
        <div class="header-with-title__user__menu__username">
          <div class="header-with-title__user__menu__username-text text-base1-medium">
            {{username}}
          </div>
        </div>
        <div class="header-with-title__user__menu__profile header-with-title__user__menu__item">
          <div class="header-with-title__user__menu__profile-icon">
            <img src="/assets/icons/forHeader/icon_profile-user_menu.svg">
          </div>
          <div class="header-with-title__user__menu__profile-text text-base1-regular">
            Профиль
          </div>
        </div>
        <div class="header-with-title__user__menu__logout header-with-title__user__menu__item">
          <div class="header-with-title__user__menu__logout-icon">
            <img src="/assets/icons/actions/icon_exit-user_menu.svg">
          </div>
          <div class="header-with-title__user__menu__logout-text text-base1-regular">
            Выход
          </div>
        </div>
      </nav>
    </div>    
  </div>
</header>